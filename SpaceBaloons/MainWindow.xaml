<Window x:Class="SpaceBaloons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBaloons"
        xmlns:renderer="clr-namespace:SpaceBaloons.Renderer"
        xmlns:converter="clr-namespace:SpaceBaloons.Converter"
        xmlns:logic="clr-namespace:SpaceBaloons.Logic"
        mc:Ignorable="d"
        Title="SpaceBaloons" Height="450" Width="800" WindowState="Maximized" WindowStyle="None" KeyDown="Window_KeyDown" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">

    <Window.DataContext>
        <logic:GameLogic/>
    </Window.DataContext>

    <Window.Resources>
        <converter:NumberToColorConverter x:Key="colorconvert" />
    </Window.Resources>

    <Grid x:Name="grid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" x:Name="upgrades_grid"/>
            <ColumnDefinition Width="3*" x:Name="game_grid"/>
            <ColumnDefinition Width="2*" x:Name="scores_grid"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <Label Content="{Binding player.Health}" ContentStringFormat="Health: {0}" />
            <ProgressBar Maximum="100" Margin="10" Value="{Binding player.Health}" Foreground="{Binding player.Health, Converter={StaticResource colorconvert}}" Height="10" />
            <Label Content="{Binding player.CurrentHeat}" ContentStringFormat="Current Heat: {0}" />
            <ProgressBar Maximum="100" Margin="10" Value="{Binding player.CurrentHeat}" Foreground="{Binding player.CurrentHeat, Converter={StaticResource colorconvert}}" Height="10" />
        </StackPanel>
        
        <renderer:Display x:Name="display" Grid.Column="1"/>

        <StackPanel Grid.Column="2">
            <Label Content="Player1"/>
            <Label Content="Player2"/>
            <Label Content="Player3"/>
            <Label Content="Player4"/>
        </StackPanel>

    </Grid>
</Window>
