<Window x:Class="SpaceBaloons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBaloons"
        xmlns:renderer="clr-namespace:SpaceBaloons.Renderer"
        xmlns:converter="clr-namespace:SpaceBaloons.Converter"
        xmlns:logic="clr-namespace:SpaceBaloons.Logic"
        mc:Ignorable="d"
        Title="SpaceBaloons" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Loaded="Window_Loaded" SizeChanged="Window_SizeChanged">
   
    <Window.DataContext>
        <logic:GameLogic/>
    </Window.DataContext>

    <Window.Resources>
        <converter:NumberToColorConverter x:Key="colorconvert" />
    </Window.Resources>
     
    <Grid x:Name="grid">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" x:Name="upgrades_grid"/>
            <ColumnDefinition Width="3*" x:Name="game_grid"/>
            <ColumnDefinition Width="2*" x:Name="scores_grid"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray">
            <Label Content="Score" Padding="10" FontSize="40" FontWeight="Black"/>
            <Label Content="9999" Padding="10" FontSize="40" FontWeight="Black"/>
            <Label Content="Health" Padding="10" FontSize="40" FontWeight="Black"/>
            <ProgressBar Maximum="100" Margin="10,0,10,0" Value="{Binding player.Health}" Foreground="{Binding player.Health, Converter={StaticResource colorconvert}}" Height="40" />
            <Label Content="Current Heath" Padding="10" FontSize="40" FontWeight="Black"/>
            <ProgressBar Maximum="100" Margin="10,0,10,0" Value="{Binding player.CurrentHeat}" Foreground="{Binding player.CurrentHeat, Converter={StaticResource colorconvert}}" Height="40" />
            <DockPanel Margin="0,10,0,0">
                <Label DockPanel.Dock="Left" Content="Reduce Heat:"  Padding="10" FontSize="40" FontWeight="Black"></Label>
                <Button DockPanel.Dock="Right" Click="Reduce_Heat" HorizontalAlignment="Right" Content="-" FontSize="15" FontWeight="Black" Height="40" Width="40" Margin="0,0,10,0"></Button>
            </DockPanel>
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Increase Attack Speed:"  Padding="10" FontSize="40" FontWeight="Black"></Label>
                <Button DockPanel.Dock="Right" Click="Increase_Attack_Speed" HorizontalAlignment="Right" Content="+" FontSize="15" FontWeight="Black" Height="40" Width="40" Margin="0,0,10,0"></Button>
            </DockPanel>
            <DockPanel>
                <Label DockPanel.Dock="Left" Content="Reduce Cooldown:"  Padding="10" FontSize="40" FontWeight="Black"></Label>
                <Button DockPanel.Dock="Right" Click="Reduce_Cooldown" HorizontalAlignment="Right" Content="-" FontSize="15" FontWeight="Black" Height="40" Width="40" Margin="0,0,10,0"></Button>
            </DockPanel>
        </StackPanel>
        
        <renderer:Display x:Name="display" Grid.Column="1"/>

        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="LightGray">
            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Margin="0,10">
                <Label Content="High Score List" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Margin="0,0,0,15"/>
            </Border>
            <DockPanel Margin="0,0,0,0">
                <Label DockPanel.Dock="Left" Content="Asdocska"  Padding="10" FontSize="15" FontWeight="Black"></Label>
                <Label DockPanel.Dock="Right" HorizontalAlignment="Right" Content="9999" Padding="10" FontSize="15" FontWeight="Black"></Label>
            </DockPanel>
        </StackPanel>

    </Grid>
</Window>
