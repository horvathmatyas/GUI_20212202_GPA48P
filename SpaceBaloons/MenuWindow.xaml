<Window x:Class="SpaceBaloons.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBaloons"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid Background="Black">
        <StackPanel>
            <Label Content="Space Baloons" HorizontalAlignment="Center" FontSize="50" FontWeight="Bold" Margin="0,20,0,15" FontFamily="goudy stout" Foreground="Red" />
            <Label Content="Enter your name:" Foreground="Red" HorizontalAlignment="Center" FontSize="30"/>
            <TextBox x:Name="tb" Padding="8" Margin="250,5,250,0" Background="Red"/>
            <Button Content="Start" Click="Button_Click" FontSize="30" Padding="15" Margin="250,5,250,0" Background="Blue" Foreground="Red" FontFamily="Algerian"/>
        </StackPanel>

    </Grid>
</Window>
