<Window x:Class="SpaceBaloons.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceBaloons"
        mc:Ignorable="d"
        Title="MenuWindow" Height="800" Width="1300" KeyDown="Window_KeyDown" WindowState="Maximized">
    <Grid Background="Gray">
        <StackPanel>
            <Label Content="Space Baloons" HorizontalAlignment="Center" FontSize="100" FontWeight="Bold" Margin="0,20,0,30" FontFamily="goudy stout" Foreground="Black" />
            <Label Content="Enter your name:" Foreground="Black" HorizontalAlignment="Center" FontSize="50" Padding="10" FontWeight="Bold" FontFamily="Arial" Margin="250,5,250,50"/>
            <TextBox x:Name="tb" Padding="10" Margin="250,5,250,50" Background="DarkGray"/>
            <Button Content="Play" Click="Button_Click" FontSize="30" Padding="15" Margin="250,5,250,0" Background="Black" Foreground="DarkGray" FontFamily="Algerian"/>
            <Label Content="Game by: Horváth Mátyás, Joó Zoltán and Joó Dávid" Foreground="Black" HorizontalAlignment="Center" FontSize="30" Padding="10" FontWeight="Bold" FontFamily="Arial" Margin="250,50,250,50"/>

        </StackPanel>

    </Grid>
</Window>
